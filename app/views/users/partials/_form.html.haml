= form_for @user do |f|
  = f.label :name
  = f.text_field :name
  = f.label :email
  = f.text_field :email
  = f.label :password
  = f.password_field :password
  = f.submit

- if @user.errors.any?
  %h6
    There are errors on this form
  %ul
    - @user.errors.full_messages.each do |msg|
      %li
        = msg